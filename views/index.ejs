<!DOCTYPE html>
<html>
<head>
  <title>Blog Home</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100&display=swap">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
  
  <div class="wrapper">
    <div class="content">
      <div class="container mt-5 text-center">
        <h1 class="mb-4">Blog Posts</h1>
        <a href="/create" class="btn btn-primary mb-3">Create a New Post</a>

        <!-- Fotoğraf Ekleme -->
        <div class="my-4">
          <video id="myVideo" width="200" autoplay muted>
            <source src="source/blog4.mp4" type="video/mp4">
            Tarayıcınız video etiketini desteklemiyor.
          </video>
         <img src="../source/2024.png" alt="Resmin alternatif yazısı" class="img-fluid" style="max-width: 200px; height: auto;"> 
         <img src="../source/blog2.png" alt="Resmin alternatif yazısı" class="img-fluid" style="max-width: 200px; height: auto;"> 
          <video id="myVideo" width="200" autoplay muted>
            <source src="../source/blog3.mp4" type="video/mp4">
            Tarayıcınız video etiketini desteklemiyor.
          </video>
          
          
          
        
          </div>
        

        <div class="row">
          <% posts.forEach((post, index) => { %>
            <div class="col-md-4 mb-4">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= post.title %></h5>
                  <p class="card-text"><%= post.content %></p>
                  <a href="/edit/<%= index %>" class="btn btn-warning">Edit</a>
                  <form action="/delete/<%= index %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger"><i class="fas fa-times"></i> Delete</button>
                  </form>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>

    <footer>
      <div class="wave" id="wave1"></div>
